products_list = [29.25, 48.99, 99.98, 124.65, 214.30, 543.90, 799.85]
length = len(products_list)
sales_list = [round(i * 0.6, 2)]
new_price_list = [round(i * 0.4, 2)]

print(' ')
print('Discount table:')
print(' ')
for i in range(length):
    a = products_list[i]*0.4
    b = round(a, 2)
    sales_list.append(b)
    c = products_list[i]*0.6
    d = round(c, 2)
    new_price_list.append(d)

